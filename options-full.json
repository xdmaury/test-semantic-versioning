{
  "scheme": "semantic",
  "versionFile": "./package.json",
  "files": ["./package-lock.json"],
  "rules": [
    {
      "trigger": "commit",
      "suffix":"-beta",
      "bump": "build"
    },
    {
      "trigger": "pull-request",
      "destBranch":"main",
      "bump": "minor",
      "tag":true
    },
    {
      "trigger": "pull-request",
      "bump": "major",
      "branch": "release",
      "reset": [
        "minor",
        "build"
      ]
    }
  ]
}
{
  "scheme": "org_semantic",
  "versionFile": "./package.json",
  "files": ["./package-lock.json"],
  "rules": [
    {
      "trigger": "pull-request",
      "destBranch": "main",
      "suffix": "-beta",
      "bump": "build"
    },
    {
      "trigger": "pull-request",
      "destBranch": "release",
      "bump": "minor",
      "reset": "build"
    }
  ]
}